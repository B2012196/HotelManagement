@page
@model PaymentCallBackModel
@{
    ViewData["Title"] = "Kết quả thanh toán";
}
@if (TempData["ErrorApiException"] != null)
{
    <br />
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorApiException"]
    </div>
}
else
{
    <div class="container d-flex justify-content-center align-items-center min-vh-100 mt-2">
        <div class="card text-center shadow-lg p-4">
            <h2 class="card-title mb-4">Kết quả Thanh Toán</h2>

            @if (Model.IsPaymentSuccessful)
            {
                <div class="alert alert-success">
                    <p>Thanh toán thành công! Cảm ơn bạn đã sử dụng dịch vụ.</p>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <p>Thanh toán thất bại hoặc không hợp lệ. Vui lòng thử lại.</p>
                </div>
            }

            <a href="/" class="btn btn-primary mt-4">Quay về trang chủ</a>
        </div>
    </div>
}